<% layout("/Layouts/boilerplate") %>

<body>
    <h2>Your Listings</h2>
    
    <!-- <form method="GET" action="/listing/new">
      <button >Create your List</button>
   </form>
   -->
   
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
   
   <% for(let list of lists){ %>
<a  href="/listing/<%= list.id %>" class="listing-link">
   <div class="card col listing-card" >
      <img src="<%= list.image %>" class="card-img-top" alt="listing_image">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text"> 
        <b> <%= list.title %> </b>
         <br>
         <%= list.price.toLocaleString("en-IN") %> / night
      </p>

      </div>
    </div>
</a>

    <% } %>
</div>
   

</body>
