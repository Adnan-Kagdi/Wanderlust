<% layout("/Layouts/boilerplate") %>

<body>
 
<style>

   .listing-card:hover{
      transform: scale(1.08);
      box-shadow:40px 80px 120px rgba(174, 174, 174, 0.546);
      border-radius:1rem;
      /* border: solid rgba(99, 99, 99, 0.727) !important; */
      .sub-list{
         display:inline-block;
         transition: bottom 1s ease-in-out;
         margin-left:0.5rem;
      }
   }

   .listing-card:hover .card-body {
  bottom: 0;
}

.card-body{
        position: relative;
        bottom:-50px;
       left: 0;
       width: 100%;
       color: rgb(0, 0, 0);
       padding: 10px;
       transition: bottom 0.3s ease;
       }

</style>

<div id="filters">
   <div class="filter ">
      <div><a href="/Trending"><i class="fa-solid fa-fire"></i></a></div>
      <p>Trending</p>
   </div>
   <div class="filter">
      <div><a href="/Rooms"><i class="fa-solid fa-bed"></i></a></div>
      <p>Rooms</p>
   </div>
   <div class="filter">
      <div><a href="/Iconic-Cities"><i class="fa-solid fa-mountain-city"></i></a></div>
      <p>Iconic Cities</p>
   </div>
   <div class="filter">
      <div><a href="/Mountains"><i class="fa-solid fa-mountain-sun"></i></a></div>
      <p>Mountains</p> 
   </div>
   <div class="filter">
      <div><a href="/Castles"><i class="fa-brands fa-fort-awesome"></i></a></div>
      <p>Castles</p>
   </div>
   <div class="filter">
      <div><a href="/Amazing-Pools"><i class="fa-solid fa-person-swimming"></i></a></div>
      <p>Amazing Pools</p>
   </div>
   <div class="filter">
      <div><a href="/Camping"><i class="fa-solid fa-campground"></i></a></div>
      <p>Camping</p>
   </div>
   <div class="filter">
      <div><a href="/Farms"><i class="fa-solid fa-cow"></i></a></div>
      <p>Farms</p>
   </div>
   <div class="filter">
      <div><a href="/Arctic"><i class="fa-regular fa-snowflake"></i></a></div>
      <p>Arctic</p>
   </div>
   <div class="filter">
      <div><a href="/Domes"><i class="fa-solid fa-igloo"></i></a></div>
      <p>Domes</p>
   </div>
   <div class="filter">
      <div><a href="/Boats"><i class="fa-solid fa-ship"></i></a></div>
      <p>Boats</p>
   </div>

   <div class="tax-Toggle">
      <div class="form-check-reverse form-switch">
         <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
         <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
       </div>
   </div>
</div>
    

<div class="row  index-list row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
   
   <% for(let list of lists){ %>
<a  href="/listing/<%= list.id %>" class="listing-link">
   <div class="card col listing-card index-card ms-1" >
      <img src="<%= list.image.url %>" class="card-img-top" alt="listing_image">

      <!-- due to small styling, layout are little bit changed in this -->
      <b class="ms-2 mt-1 crd-title"> <%= list.title %> </b>
      <d class="price-list ms-2" >&#8377; <%= list.price.toLocaleString("en-IN") %> / night <i class="tax-info"> &nbsp; &nbsp; <b>+18% GST </b> </i></d> 
      

      <div class="card-body crd-inf ">
        <p class="card-text"> 
           <d class="sub-list">Created by : <b><%= list.owner.username %></b></d> 
         </p>
      </div>
    </div>
</a> 
    <% } %>
</div>   

</body>
